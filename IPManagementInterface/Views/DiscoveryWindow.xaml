<Window x:Class="IPManagementInterface.Views.DiscoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:IPManagementInterface.Models"
        Title="Network Discovery" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Icon="pack://application:,,,/Resources/TestWrrior.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ðŸ” Network Device Discovery" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Discovery Configuration -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Start IP" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="StartIpTextBox" Text="192.168.1.1" Padding="8"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <TextBlock Text="End IP" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="EndIpTextBox" Text="192.168.1.254" Padding="8"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <TextBlock Text="Ports to Scan (comma-separated)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="PortsTextBox" Text="80,443,8000,8080,8443" Padding="8"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <CheckBox x:Name="HttpCheckBox" Content="HTTP" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox x:Name="HttpsCheckBox" Content="HTTPS" IsChecked="True" Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Button x:Name="StartDiscoveryButton" 
                            Content="ðŸš€ Start Discovery" 
                            Click="StartDiscoveryButton_Click"
                            Padding="20,10"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button x:Name="StopDiscoveryButton" 
                            Content="â¹ï¸ Stop" 
                            Click="StopDiscoveryButton_Click"
                            Padding="20,10"
                            Background="{DynamicResource ErrorBrush}"
                            Foreground="White"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress and Results -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Panel -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Discovery Progress" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <TextBlock x:Name="StatusTextBlock"
                               Text="Ready to start discovery..."
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <ProgressBar x:Name="ProgressBar"
                                  Minimum="0"
                                  Maximum="100"
                                  Height="25"
                                  Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Scanned" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="ScannedTextBlock" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Found" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="FoundTextBlock" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Elapsed Time" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="ElapsedTimeTextBlock" 
                               Text="00:00:00" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,5,0,15"/>

                    <TextBlock Text="Current Scan" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="CurrentIpTextBlock" 
                               Text="-" 
                               FontSize="14" 
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Recent Discoveries -->
            <Border Grid.Column="2"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Discoveries" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <ListBox x:Name="RecentDiscoveriesListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxHeight="400">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundBrush}"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Add All to Dashboard" 
                    Click="AddAllButton_Click"
                    Width="150"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Width="100"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextPrimaryBrush}"/>
        </StackPanel>
    </Grid>
</Window>
