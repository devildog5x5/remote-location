<Window x:Class="IPManagementInterface.Views.AddAlertRuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:IPManagementInterface.Models"
        Title="Add Alert Rule" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Icon="pack://application:,,,/Resources/TestWrrior.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Alert Rule" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Rule Name" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBox x:Name="RuleNameTextBox"
                     Padding="8"
                     Margin="0,0,0,15"/>

            <TextBlock Text="Condition" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox x:Name="ConditionComboBox"
                      SelectedValuePath="Tag"
                      Padding="8"
                      Margin="0,0,0,15">
                <ComboBoxItem Content="Device Goes Offline" Tag="DeviceGoesOffline"/>
                <ComboBoxItem Content="Device Comes Online" Tag="DeviceComesOnline"/>
                <ComboBoxItem Content="Device Offline For Duration" Tag="DeviceOfflineForDuration"/>
                <ComboBoxItem Content="Status Change" Tag="StatusChange"/>
            </ComboBox>

            <TextBlock Text="Action" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox x:Name="ActionComboBox"
                      SelectedValuePath="Tag"
                      Padding="8"
                      Margin="0,0,0,15">
                <ComboBoxItem Content="Show Notification" Tag="ShowNotification"/>
                <ComboBoxItem Content="Play Sound" Tag="PlaySound"/>
                <ComboBoxItem Content="Log Event" Tag="LogEvent"/>
            </ComboBox>

            <TextBlock Text="Offline Duration (minutes) - Only for 'Offline For Duration' condition" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBox x:Name="DurationTextBox"
                     Text="5"
                     Padding="8"
                     Margin="0,0,0,15"/>

            <CheckBox x:Name="EnabledCheckBox"
                      Content="Enable Rule"
                      IsChecked="True"
                      FontSize="14"
                      Foreground="{DynamicResource TextPrimaryBrush}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Width="100"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextPrimaryBrush}"/>
            <Button Content="Add Rule" 
                    Click="AddRuleButton_Click"
                    Width="100"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
