<Window x:Class="IPManagementInterface.Views.DeviceHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device History" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Icon="pack://application:,,,/Resources/TestWrrior.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Device Activity History" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding History}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="{DynamicResource SurfaceBrush}"
                  BorderBrush="{DynamicResource BorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
                <DataGridTextColumn Header="Device IP" Binding="{Binding DeviceIpAddress}" Width="120"/>
                <DataGridTextColumn Header="Event Type" Binding="{Binding EventType}" Width="120"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" 
                Content="Close" 
                HorizontalAlignment="Right"
                Width="100"
                Height="35"
                Margin="0,15,0,0"
                Click="CloseButton_Click"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="White"/>
    </Grid>
</Window>
