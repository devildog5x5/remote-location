<Window x:Class="IPManagementInterface.Views.AlertRulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert Rules" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Icon="pack://application:,,,/Resources/TestWrrior.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Alert Rules Configuration" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AlertRules}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="{DynamicResource SurfaceBrush}"
                  BorderBrush="{DynamicResource BorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="150"/>
                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="120"/>
                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Add Rule" 
                    Click="AddRuleButton_Click"
                    Width="100"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Width="100"
                    Height="35"
                    Margin="5,0"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
