<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Color Palette - Vibrant Colors -->
    <Color x:Key="PrimaryBlue">#1976D2</Color>
    <Color x:Key="PrimaryBlueDark">#1565C0</Color>
    <Color x:Key="PrimaryBlueLight">#42A5F5</Color>
    
    <Color x:Key="AccentOrange">#FF6F00</Color>
    <Color x:Key="AccentOrangeDark">#E65100</Color>
    <Color x:Key="AccentOrangeLight">#FFB74D</Color>
    
    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="WarningYellow">#FFC107</Color>
    <Color x:Key="ErrorRed">#F44336</Color>
    
    <!-- Base Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryBlueDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryBlueLight}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentOrange}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentOrangeDark}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentOrangeLight}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningYellow}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRed}"/>
    
</ResourceDictionary>
