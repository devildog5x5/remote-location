<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Dark Theme - Rich and Vibrant -->
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#B0BEC5</Color>
    <Color x:Key="BorderDark">#424242</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceDark}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryDark}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryDark}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderDark}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#42A5F5"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FFB74D"/>
    
</ResourceDictionary>
