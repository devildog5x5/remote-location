<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Ocean Theme - Calming Blues and Teals -->
    <Color x:Key="Ocean_Deep">#006994</Color>
    <Color x:Key="Ocean_Medium">#4A90A4</Color>
    <Color x:Key="Ocean_Light">#7FB3C3</Color>
    <Color x:Key="Ocean_Background">#F0F7FA</Color>
    <Color x:Key="Ocean_Surface">#FFFFFF</Color>
    <Color x:Key="Ocean_Text">#1A3A4A</Color>
    <Color x:Key="Ocean_Border">#B8D4E3</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Ocean_Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Ocean_Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Ocean_Text}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5A7A8A"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Ocean_Border}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Ocean_Deep}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Ocean_Medium}"/>
    
</ResourceDictionary>
