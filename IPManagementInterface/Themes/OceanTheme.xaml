<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Ocean Theme - Calming Blues and Teals -->
    <Color x:Key="Ocean_Deep">#0066CC</Color>
    <Color x:Key="Ocean_Medium">#0099CC</Color>
    <Color x:Key="Ocean_Light">#66CCFF</Color>
    <Color x:Key="Ocean_Background">#E6F5FF</Color>
    <Color x:Key="Ocean_Surface">#FFFFFF</Color>
    <Color x:Key="Ocean_Text">#003366</Color>
    <Color x:Key="Ocean_Border">#99D6FF</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Ocean_Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Ocean_Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Ocean_Text}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#336699"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Ocean_Border}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Ocean_Deep}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Ocean_Medium}"/>
    
</ResourceDictionary>
