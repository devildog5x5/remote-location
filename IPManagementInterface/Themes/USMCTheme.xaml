<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- USMC Theme - Red, Gold, and Blue -->
    <Color x:Key="USMC_Red">#C8102E</Color>
    <Color x:Key="USMC_Gold">#FFD700</Color>
    <Color x:Key="USMC_Blue">#003366</Color>
    <Color x:Key="USMC_Background">#F5F5F0</Color>
    <Color x:Key="USMC_Surface">#FFFFFF</Color>
    <Color x:Key="USMC_Text">#1A1A1A</Color>
    <Color x:Key="USMC_Border">#D4AF37</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource USMC_Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource USMC_Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource USMC_Text}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource USMC_Border}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource USMC_Red}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource USMC_Gold}"/>
    
</ResourceDictionary>
