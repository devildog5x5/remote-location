<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Olive Drab Theme - Military Green -->
    <Color x:Key="OliveDrab_Dark">#3D5A3D</Color>
    <Color x:Key="OliveDrab_Medium">#6B8E6B</Color>
    <Color x:Key="OliveDrab_Light">#9FB59F</Color>
    <Color x:Key="OliveDrab_Background">#F0F4F0</Color>
    <Color x:Key="OliveDrab_Surface">#FFFFFF</Color>
    <Color x:Key="OliveDrab_Text">#2C3E2C</Color>
    <Color x:Key="OliveDrab_Border">#8FA68F</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource OliveDrab_Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource OliveDrab_Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource OliveDrab_Text}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5A6B5A"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource OliveDrab_Border}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource OliveDrab_Dark}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource OliveDrab_Medium}"/>
    
</ResourceDictionary>
