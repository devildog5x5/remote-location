<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Olive Drab Theme - Military Green -->
    <Color x:Key="OliveDrab_Dark">#2D4A2D</Color>
    <Color x:Key="OliveDrab_Medium">#5A8A5A</Color>
    <Color x:Key="OliveDrab_Light">#8FB58F</Color>
    <Color x:Key="OliveDrab_Background">#F0F8F0</Color>
    <Color x:Key="OliveDrab_Surface">#FFFFFF</Color>
    <Color x:Key="OliveDrab_Text">#1A2E1A</Color>
    <Color x:Key="OliveDrab_Border">#7FA67F</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource OliveDrab_Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource OliveDrab_Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource OliveDrab_Text}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#4A6A4A"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource OliveDrab_Border}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource OliveDrab_Dark}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource OliveDrab_Medium}"/>
    
</ResourceDictionary>
