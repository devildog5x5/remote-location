<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IPManagementInterface.Shared.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IPManagementInterface.Shared.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="IP Management">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Discovery"
        ContentTemplate="{DataTemplate local:DiscoveryPage}"
        Route="DiscoveryPage" />

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="Device Details"
        ContentTemplate="{DataTemplate local:DeviceDetailsPage}"
        Route="DeviceDetailsPage" />

    <ShellContent
        Title="Statistics"
        ContentTemplate="{DataTemplate local:StatisticsPage}"
        Route="StatisticsPage" />

    <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate local:HistoryPage}"
        Route="HistoryPage" />

</Shell>
