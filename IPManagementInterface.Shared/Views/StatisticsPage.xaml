<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPManagementInterface.Shared.Views.StatisticsPage"
             Title="Statistics"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <!-- Overall Statistics -->
            <Frame BackgroundColor="{DynamicResource SurfaceColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="Overall Statistics" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="15" ColumnSpacing="15">
                        <Frame Grid.Row="0" Grid.Column="0"
                               BackgroundColor="{DynamicResource PrimaryColor}"
                               CornerRadius="8"
                               Padding="15"
                               HasShadow="False">
                            <StackLayout Spacing="5">
                                <Label Text="Total Devices" 
                                       FontSize="14"
                                       TextColor="White"
                                       Opacity="0.9"/>
                                <Label Text="{Binding TotalDevices}" 
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </StackLayout>
                        </Frame>
                        
                        <Frame Grid.Row="0" Grid.Column="1"
                               BackgroundColor="{DynamicResource SuccessColor}"
                               CornerRadius="8"
                               Padding="15"
                               HasShadow="False">
                            <StackLayout Spacing="5">
                                <Label Text="Online" 
                                       FontSize="14"
                                       TextColor="White"
                                       Opacity="0.9"/>
                                <Label Text="{Binding OnlineDevices}" 
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </StackLayout>
                        </Frame>
                        
                        <Frame Grid.Row="1" Grid.Column="0"
                               BackgroundColor="{DynamicResource ErrorColor}"
                               CornerRadius="8"
                               Padding="15"
                               HasShadow="False">
                            <StackLayout Spacing="5">
                                <Label Text="Offline" 
                                       FontSize="14"
                                       TextColor="White"
                                       Opacity="0.9"/>
                                <Label Text="{Binding OfflineDevices}" 
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </StackLayout>
                        </Frame>
                        
                        <Frame Grid.Row="1" Grid.Column="1"
                               BackgroundColor="{DynamicResource WarningColor}"
                               CornerRadius="8"
                               Padding="15"
                               HasShadow="False">
                            <StackLayout Spacing="5">
                                <Label Text="Unknown" 
                                       FontSize="14"
                                       TextColor="White"
                                       Opacity="0.9"/>
                                <Label Text="{Binding UnknownDevices}" 
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Statistics by Category -->
            <Frame BackgroundColor="{DynamicResource SurfaceColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="By Category" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" 
                          RowSpacing="10" ColumnSpacing="10">
                        <!-- Cameras -->
                        <Label Grid.Row="0" Grid.Column="0" Text="ðŸ“·" FontSize="24"/>
                        <StackLayout Grid.Row="0" Grid.Column="1">
                            <Label Text="Cameras" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding CameraCount}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}"/>
                        </StackLayout>
                        <Label Grid.Row="0" Grid.Column="2" 
                               Text="{Binding CameraOnlineCount}" 
                               FontSize="16"
                               TextColor="{DynamicResource SuccessColor}"
                               FontAttributes="Bold"/>
                        
                        <!-- Network -->
                        <Label Grid.Row="1" Grid.Column="0" Text="ðŸŒ" FontSize="24"/>
                        <StackLayout Grid.Row="1" Grid.Column="1">
                            <Label Text="Network" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding NetworkCount}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}"/>
                        </StackLayout>
                        <Label Grid.Row="1" Grid.Column="2" 
                               Text="{Binding NetworkOnlineCount}" 
                               FontSize="16"
                               TextColor="{DynamicResource SuccessColor}"
                               FontAttributes="Bold"/>
                        
                        <!-- Servers -->
                        <Label Grid.Row="2" Grid.Column="0" Text="ðŸ–¥ï¸" FontSize="24"/>
                        <StackLayout Grid.Row="2" Grid.Column="1">
                            <Label Text="Servers" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding ServerCount}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}"/>
                        </StackLayout>
                        <Label Grid.Row="2" Grid.Column="2" 
                               Text="{Binding ServerOnlineCount}" 
                               FontSize="16"
                               TextColor="{DynamicResource SuccessColor}"
                               FontAttributes="Bold"/>
                        
                        <!-- Other -->
                        <Label Grid.Row="3" Grid.Column="0" Text="ðŸ“¦" FontSize="24"/>
                        <StackLayout Grid.Row="3" Grid.Column="1">
                            <Label Text="Other" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding OtherCount}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}"/>
                        </StackLayout>
                        <Label Grid.Row="3" Grid.Column="2" 
                               Text="{Binding OtherOnlineCount}" 
                               FontSize="16"
                               TextColor="{DynamicResource SuccessColor}"
                               FontAttributes="Bold"/>
                    </Grid>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>
