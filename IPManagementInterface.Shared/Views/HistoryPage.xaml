<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:IPManagementInterface.Shared.Models"
             x:Class="IPManagementInterface.Shared.Views.HistoryPage"
             Title="Device History"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <Label Text="Recent Activity" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="{DynamicResource PrimaryTextColor}"/>

                <CollectionView ItemsSource="{Binding HistoryItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:DeviceHistory">
                            <Frame BackgroundColor="{DynamicResource SurfaceColor}" 
                                   CornerRadius="10" 
                                   Padding="15"
                                   Margin="0,0,0,10"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" RowSpacing="5" ColumnSpacing="15">
                                    <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                           Text="ðŸ“‹"
                                           FontSize="32"
                                           VerticalOptions="Center"/>
                                    <StackLayout Grid.Row="0" Grid.Column="1">
                                        <Label Text="{Binding Description}" 
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource PrimaryTextColor}"/>
                                        <Label Text="{Binding DeviceIpAddress}" 
                                               FontSize="14"
                                               TextColor="{DynamicResource SecondaryTextColor}"/>
                                    </StackLayout>
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Timestamp, StringFormat='{0:g}'}" 
                                           FontSize="12"
                                           TextColor="{DynamicResource SecondaryTextColor}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                            <Label Text="No history available" 
                                   FontSize="18"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
