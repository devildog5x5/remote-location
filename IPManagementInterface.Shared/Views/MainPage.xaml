<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:IPManagementInterface.Shared.ViewModels"
             xmlns:models="clr-namespace:IPManagementInterface.Shared.Models"
             x:Class="IPManagementInterface.Shared.Views.MainPage"
             Title="Dashboard"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             xmlns:converters="clr-namespace:IPManagementInterface.Shared.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
            <Label Text="üîç IP Management" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource PrimaryTextColor}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1"
                    Text="‚öôÔ∏è"
                    FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="White"
                    Clicked="SettingsButton_Clicked"/>
        </Grid>

        <!-- Category Filter -->
        <Picker Grid.Row="1"
                SelectedIndex="{Binding SelectedCategoryIndex}"
                Margin="0,0,0,10"
                BackgroundColor="{DynamicResource SurfaceColor}"
                TextColor="{DynamicResource PrimaryTextColor}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>üìã All Devices</x:String>
                    <x:String>üì∑ Cameras</x:String>
                    <x:String>üåê Network</x:String>
                    <x:String>üñ•Ô∏è Servers</x:String>
                    <x:String>üì¶ Other</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Search Bar -->
        <SearchBar Grid.Row="2"
                   Text="{Binding SearchText}"
                   Placeholder="Search devices..."
                   Margin="0,0,0,10"
                   BackgroundColor="{DynamicResource SurfaceColor}"
                   TextColor="{DynamicResource PrimaryTextColor}"/>

        <!-- Device List -->
        <RefreshView Grid.Row="3" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshAllCommand}">
            <CollectionView ItemsSource="{Binding FilteredDevices}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedDevice}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:IoTDevice">
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto,Auto" 
                              BackgroundColor="{DynamicResource SurfaceColor}"
                              Margin="0,0,0,10">
                            <Frame Grid.Column="0"
                                   BackgroundColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                   CornerRadius="5"
                                   WidthRequest="12"
                                   HeightRequest="50"
                                   Margin="0,0,15,0"
                                   HasShadow="False"/>
                            <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="{Binding IpAddress}" 
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                <Label Text="{Binding DeviceType}" 
                                       FontSize="12"
                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                            </StackLayout>
                            <Label Grid.Column="2"
                                   Text="‚≠ê"
                                   FontSize="24"
                                   IsVisible="{Binding IsFavorite}"
                                   Margin="10,0"
                                   VerticalOptions="Center"/>
                            <Button Grid.Column="3"
                                    Text="‚Üí"
                                    FontSize="20"
                                    WidthRequest="44"
                                    HeightRequest="44"
                                    CornerRadius="22"
                                    BackgroundColor="{DynamicResource AccentColor}"
                                    TextColor="White"
                                    Clicked="DeviceDetails_Clicked"
                                    CommandParameter="{Binding .}"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="No devices found" 
                               FontSize="18"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               HorizontalOptions="Center"/>
                        <Label Text="Tap the + button to add a device" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Floating Action Buttons -->
        <Grid Grid.Row="3" 
              HorizontalOptions="End" 
              VerticalOptions="End"
              Margin="0,0,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Text="üîç"
                    FontSize="24"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{DynamicResource AccentColor}"
                    TextColor="White"
                    Clicked="DiscoverButton_Clicked"
                    Margin="0,0,0,10"/>
            <Button Grid.Row="1"
                    Text="‚ûï"
                    FontSize="24"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="White"
                    Clicked="AddDeviceButton_Clicked"/>
        </Grid>

    </Grid>
</ContentPage>
